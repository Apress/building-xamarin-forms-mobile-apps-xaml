<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="Dropdown Using ToolbarItems" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="NavigationExamples.DropdownMenu">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS">
                10, 20, 10, 5
            </On>
            <On Platform="Android">
                10, 0, 10, 5
            </On>
        </OnPlatform>
    </ContentPage.Padding>
    <ContentPage.ToolbarItems>
		<ToolbarItem Text="Home" Order="Secondary" Clicked="Navigate" CommandParameter="NavigationPage1" />
		<ToolbarItem Text="Second" Order="Secondary" Clicked="Navigate" CommandParameter="NavigationPage2" />
	</ContentPage.ToolbarItems>
</ContentPage>
