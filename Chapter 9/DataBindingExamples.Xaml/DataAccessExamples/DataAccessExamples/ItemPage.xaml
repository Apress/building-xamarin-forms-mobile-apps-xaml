<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="Trivial Data Binding" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="DataBindingExamples.ItemPage">
	<ContentPage.Content>
		<StackLayout>
			<Entry HorizontalOptions="FillAndExpand" Text="{Binding Title}" />
			<Button Text="Display Item Value" FontSize="Large" HorizontalOptions="Center" VerticalOptions="Fill" Clicked="ButtonClicked" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
